<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('home.title') %></title>
</head>
<body>
    <div>
        <section class="bg-primary text-white py-5">
            <div class="container text-center">
                <h1 class="display-4 fw-bold mb-3"><%= t('home.hero.title') %></h1>
                <p class="lead mb-4"><%= t('home.hero.subtitle') %></p>
                <div>
                    <%= button_to t('home.hero.show_exam_list'), exams_path(), method: :get, class: "btn btn-outline-light btn-lg" %>
                </div>
            </div>
        </section>

        <section class="py-5 bg-light">
            <div class="container">
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-journal-check display-4 text-primary mb-3"></i>
                                <h3 class="card-title"><%= t('home.features.create.title') %></h3>
                                <p class="card-text"><%= t('home.features.create.description') %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-alarm display-4 text-primary mb-3"></i>
                                <h3 class="card-title"><%= t('home.features.share.title') %></h3>
                                <p class="card-text"><%= t('home.features.share.description') %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-person-check display-4 text-primary mb-3"></i>
                                <h3 class="card-title"><%= t('home.features.results.title') %></h3>
                                <p class="card-text"><%= t('home.features.results.description') %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-5">
            <div class="container text-center">
                <h2 class="display-5 fw-bold mb-3"><%= t('home.cta.title') %></h2>
                <p class="lead mb-4"><%= t('home.cta.subtitle') %></p>
                <form class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="<%= t('home.cta.email_placeholder') %>" aria-label="<%= t('home.cta.email_label') %>">
                            <button class="btn btn-primary" type="submit"><%= t('home.cta.submit') %></button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</body>
</html>