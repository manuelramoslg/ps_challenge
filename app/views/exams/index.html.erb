<div class="container mt-5">
  <div class="row mb-4">
    <div class="col">
      <h1 class="display-4"><%= t('exams.index.title') %></h1>
    </div>
    <div class="col-auto">
      <%= link_to new_exam_path, class: 'btn btn-primary btn-lg' do %>
        <i class="bi bi-plus-circle me-2"></i><%= t('exams.index.new_exam') %>
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col"><%= t('exams.attributes.title') %></th>
              <th scope="col"><%= t('exams.attributes.start_date') %></th>
              <th scope="col"><%= t('exams.attributes.end_date') %></th>
              <th scope="col" class="text-center"><%= t('exams.index.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @exams.each do |exam| %>
              <tr>
                <td class="fw-bold"><%= exam.title %></td>
                <td><%= l(exam.start_date, format: :short) %></td>
                <td><%= l(exam.end_date, format: :short) %></td>
                <td>
                  <div class="d-flex justify-content-center gap-2">
                    <%= link_to exam_path(exam), class: 'btn btn-outline-primary btn-sm', title: t('exams.index.show') do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= button_to exam_path(exam), method: :delete, form: { data: { turbo_confirm: t('exams.index.confirm_delete') } }, class: 'btn btn-outline-danger btn-sm', title: t('exams.index.delete') do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                    <%= button_to start_exam_attempt_path(exam), method: :post, class: 'btn btn-success btn-sm', title: t('exams.index.take_exam') do %>
                      <i class="bi bi-play-fill"></i> <%= t('exams.index.take_exam') %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @exams.empty? %>
    <div class="text-center mt-5">
      <p class="lead text-muted"><%= t('exams.index.no_exams') %></p>
    </div>
  <% end %>
</div>